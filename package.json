{
  "name": "@anmiles/logger",
  "version": "5.0.1",
  "description": "Logging data with timestamp into console and/or file",
  "keywords": [
    "logging",
    "console",
    "debug"
  ],
  "author": "Anatoliy Oblaukhov",
  "homepage": "https://gitlab.com/anmiles/lib/logger",
  "repository": "gitlab:anmiles/lib/logger",
  "license": "MIT",
  "engines": {
    "node": ">=18.14.2"
  },
  "type": "module",
  "exports": "./dist/index.js",
  "files": [ "dist" ],
  "scripts": {
    "build": "rimraf dist && tsc -p ./tsconfig.build.json",
    "lint": "eslint --ext .js,.cjs,.ts --ignore-path .gitignore .",
    "lint:fix": "npm run lint -- --fix",
    "test": "jest --verbose",
    "test:coverage": "npm test -- --coverage",
    "test:ci": "npm test -- --ci --coverage",
    "test:watch": "npm test -- --watch",
    "test:watch:coverage": "npm test -- --watch --coverage",
    "test:report:coverage": "nyc report --nycrc-path ./coverage.config.js -t ./coverage --report-dir ./coverage"
  },
  "dependencies": {
    "colorette": "^2.0.20",
    "moment": "^2.30.1"
  },
  "devDependencies": {
    "@anmiles/eslint-config": "^4.0.0",
    "@anmiles/tsconfig": "^1.0.10",
    "@types/event-emitter": "^0.3.5",
    "@types/jest": "^29.5.11",
    "@typescript-eslint/eslint-plugin": "^6.18.1",
    "@typescript-eslint/parser": "^6.18.1",
    "eslint": "^8.56.0",
    "eslint-plugin-align-assignments": "^1.1.2",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jest": "^27.6.3",
    "event-emitter": "^0.3.5",
    "jest": "^29.7.0",
    "nyc": "^15.1.0",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.3"
  }
}
